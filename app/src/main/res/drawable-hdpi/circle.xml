<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            >
            <solid
                android:color="@color/purple"
                />
            <stroke
                android:color="@color/purple"
                android:width="2dp"
                />
            <size
                android:width="40dp"
                android:height="40dp"
                />

        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_add"
        android:bottom="10dp"
        android:top="10dp"
        android:right="10dp"
        android:left="10dp"
        />
</layer-list>